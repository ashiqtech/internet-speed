# Cache HTML files for 1 hour
/index.html
  Cache-Control: public, max-age=3600

# Cache CSS and JS files for 1 year (highly recommended for faster loads)
/style.css
  Cache-Control: public, max-age=31536000
/*.css
  Cache-Control: public, max-age=31536000
/*.js
  Cache-Control: public, max-age=31536000

